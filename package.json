{
	"name": "naive-i18n",
	"displayName": "naive-i18n",
	"description": "add hover texts to your i18n words",
	"version": "0.9.1",
	"publisher": "BohaoWang",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/gnosis23/vscode-naive-i18n"
	},
	"icon": "resources/icon.png",
	"activationEvents": [
		"onLanguage:javascript",
		"onCommand:n18n.config"
	],
	"main": "./out/extension.js",
	"contributes": {
		"capabilities": {
			"hoverProvider": "true"
		},
		"configuration": {
			"type": "object",
			"title": "n18n: Configuration File Location",
			"properties": {
				"n18n.location": {
					"type": "string",
					"default": "",
					"description": "Storage location for i18n text."
				}
			}
		},
		"commands": [
			{
				"command": "n18n.config",
				"title": "naive-i18n: setup config"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
